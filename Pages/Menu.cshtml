<body id="menu" class="menu">
    <div class="container" data-aos="fade-up">

        <div class="section-header">
            <h2>Our Menu</h2>
            <p>Check Our <span>Set ELkol </span>Menu</p>
        </div>

        <ul class="nav nav-tabs d-flex justify-content-center" data-aos="fade-up" data-aos-delay="200">

            <li class="nav-item">
                <a class="nav-link active show" data-bs-toggle="tab" data-bs-target="#menu-maincourses">
                    <h4>Main Courses</h4>
                </a>
            </li><!-- End tab nav item -->

            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" data-bs-target="#menu-breakfast">
                    <h4>Breakfast</h4>
                </a><!-- End tab nav item -->

            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" data-bs-target="#menu-appetizers">
                    <h4>Appetizers</h4>
                </a>
            </li><!-- End tab nav item -->

            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" data-bs-target="#menu-dessert">
                    <h4>Dessert</h4>
                </a>
            </li><!-- End tab nav item -->
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" data-bs-target="#menu-others">
                    <h4>Others</h4>
                </a>
            </li>

        </ul>

        <div class="tab-content" data-aos="fade-up" data-aos-delay="300">

            <div class="tab-pane fade active show" id="menu-maincourses">

                <div class="tab-header text-center">
                    <p>Menu</p>
                    <h3>Main Courses</h3>
                </div>

                <div class="row gy-5">
                    @for (int i = 0; i < Model.Main_Courses_Meal_names.Count; i++)
                    {
                    <div class="col-lg-4 menu-item">
                        <a asp-page="/MealInfo"> <img src="/img/menu/menu-item-1.png" class="menu-img img-fluid" alt=""></a>
                        <h4>@Model.Main_Courses_Meal_names[i]</h4>
                        <p class="ingredients">
                                @Model.Main_Courses_Meal_ingredients[i]
                        </p>
                        <p class="price">
                                @Model.prices_Main_Courses[i] EGP
                        </p>
                    </div><!-- Menu Item -->
                    }

 

                </div>
            </div><!-- End Starter Menu Content -->

            <div class="tab-pane fade" id="menu-breakfast">

                <div class="tab-header text-center">
                    <p>Menu</p>
                    <h3>Breakfast</h3>
                </div>

                <div class="row gy-5">
                    @for (int i = 0; i < Model.Breakfast_Meal_names.Count; i++)
                    {
                        <div class="col-lg-4 menu-item">
                            <a asp-page="/MealInfo"> <img src="/img/menu/menu-item-1.png" class="menu-img img-fluid" alt=""></a>
                            <h4>@Model.Breakfast_Meal_names[i]</h4>
                            <p class="ingredients">
                                @Model.Breakfast_Meal_ingredients[i]
                            </p>
                            <p class="price">
                                @Model.prices_Breakfast[i] EGP
                            </p>
                        </div>

                        <!-- Menu Item -->
                    }



                </div>
            </div><!-- End Breakfast Menu Content -->

            <div class="tab-pane fade" id="menu-appetizers">

                <div class="tab-header text-center">
                    <p>Menu</p>
                    <h3>Appetizers</h3>
                </div>

                <div class="row gy-5">
                    @for (int i = 0; i < Model.Appetizers_Meal_names.Count; i++)
                    {

                    <div class="col-lg-4 menu-item">
                        <a asp-page="/MealInfo"> <img src="/img/menu/menu-item-1.png" class="menu-img img-fluid" alt=""></a>
                            <h4>@Model.Appetizers_Meal_names[i]</h4>
                        <p class="ingredients">
                            @Model.Appetizers_Meal_ingredients[i]
                        </p>
                        <p class="price">
                                @Model.prices_Appetizers[i] EGP
                        </p>
                    </div><!-- Menu Item -->
                    }

                

                </div>
            </div><!-- End Lunch Menu Content -->

            <div class="tab-pane fade" id="menu-dessert">

                <div class="tab-header text-center">
                    <p>Menu</p>
                    <h3>Dessert</h3>
                </div>

                <div class="row gy-5">
                    @for (int i = 0; i < Model.Desserts_Meal_names.Count; i++)
                    {
                    <div class="col-lg-4 menu-item">
                        <a asp-page="/MealInfo"> <img src="/img/menu/menu-item-1.png" class="menu-img img-fluid" alt=""></a>
                            <h4>@Model.Desserts_Meal_names[i]</h4>
                        <p class="ingredients">
                                @Model.Desserts_Meal_ingredients[i]
                        </p>
                        <p class="price">
                                @Model.prices_Desserts[i] EGP
                        </p>
                    </div><!-- Menu Item -->
                    }


                </div>
            </div><!-- End Dinner Menu Content -->

            <div class="tab-pane fade" id="menu-others">

                <div class="tab-header text-center">
                    <p>Menu</p>
                    <h3>Others</h3>
                </div>

                <div class="row gy-5">
                    @for (int i = 0; i < Model.Others_Meal_names.Count; i++)
                    {
                        <div class="col-lg-4 menu-item">
                            <a asp-page="/MealInfo"> <img src="/img/menu/menu-item-1.png" class="menu-img img-fluid" alt=""></a>
                            <h4>@Model.Others_Meal_names[i]</h4>
                            <p class="ingredients">
                                @Model.Others_Meal_ingredients[i]
                            </p>
                            <p class="price">
                                @Model.prices_Others[i] EGP
                            </p>
                        </div>

                        <!-- Menu Item -->
                    }


                </div>
            </div><!-- End Dinner Menu Content -->

        </div>


    </div>
</body><!-- End Menu Section -->