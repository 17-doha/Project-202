                <a class="nav-link" data-bs-toggle="tab" data-bs-target="#menu-others">
                    <h4>Others</h4>
                </a>
            </li>

        </ul>

        <div class="tab-content" data-aos="fade-up" data-aos-delay="300">

            <div class="tab-pane fade active show" id="menu-maincourses">

                <div class="tab-header text-center">
                    <p>Menu</p>
                    <h3>Main Courses</h3>
                </div>

                <div class="row gy-5">
                    @for (int i = 0; i < Model.one.Main_Courses_Meal_names.Count; i++)
                    {
                        <div class="col-lg-4 menu-item">
                            @{await Model.OnGetImagesAsync("Main");}
                            <form method="get" asp-page-handler="ImagesAsync">
                               
                                @if (Model.one.Images_Main[i] != null)
                                {
                                    string base64Image = Convert.ToBase64String(Model.one.Images_Main[i]);
                                    <a asp-page="/MealInfo" asp-route-id="@Model.one.ids_Main_Courses[i]" asp-route-identifier="@Model.identifier">
                                    
                                    <img class="menu-img img-fluid circular-image" src="data:image/jpeg;base64,@base64Image" alt="Meal Image" width="500" />
                                    </a>
                                   
                                    <h4>@Model.one.Main_Courses_Meal_names[i]</h4>
                                    <p class="ingredients">
                                        @Model.one.Main_Courses_Meal_ingredients[i]
                                    </p>
                                    <p class="price">
                                        @Model.one.prices_Main_Courses[i] EGP
                                    </p>
                                }
                                else
                                {
                                    <p>No image available.</p>
                                }
                            </form>
                        
                    </div><!-- Menu Item -->
                    }

 

                </div>
            </div><!-- End Starter Menu Content -->

