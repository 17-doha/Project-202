<style>
    .circular-image {
        width: 300px;
        height: 400px;
        border-radius: 70%;
        object-fit: cover;
    }

    .btn_add_to_cart {
        background-color: #8b0000;
        color: #fff;
        margin-left: auto;
        margin-right: auto;
        display: block; /* Center the button */
        padding: 10px 20px;
        border-radius: 10px;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .col-lg-4.minishop-item {
        text-align: center;
        margin-bottom: 20px;
        margin-left: auto;
        margin-right: auto;
    }

        .col-lg-4.minishop-item img {
            width: 100%;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 10px;
        }
</style>
<div class="tab-content" data-aos="fade-up" data-aos-delay="300">
<div class="container">
<form method="post" asp-page-handler="Update">
    @Html.AntiForgeryToken()
    @{
        string base64Image = null;  // Initialize the variable outside the if block

        if (Model.data != null)
        {
            base64Image = Convert.ToBase64String(Model.data);
        }
    }

    <div class="col-lg-4 minishop-item">
        @if (base64Image != null)
        {
            <img class="menu-img img-fluid circular-image" src="data:image/jpeg;base64,@base64Image" alt="Meal Image" width="500" />
        }
        <h4>@Model.Minishop_name</h4>
        


        <p class="price">
            @Model.Minishop_price
        </p>
    </div><!-- Menu Item -->
    <input type="hidden" name="Minishop_name" value="@Model.Minishop_name" />
    <input type="hidden" name="id_minishop" value="@Model.id_minishop" />
    <input type="hidden" name="flag" value="@Model.flag" />
    <input type="hidden" name="Minishop_price" value="@Model.Minishop_price" />
    <input type="hidden" name="Minishop_identifier" value="@Model.Minishop_identifier" />

    <button type="submit" class="btn btn_add_to_cart btn-danger">Add To Cart</button>

        </form>
