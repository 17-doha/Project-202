<body class="chefs section-bg" id="chefs section-bg">
    <div class="container" data-aos="fade-up">

        <div class="section-header">
            <h2>Our Minishop</h2>
            <p>Check Our <span>Set ElKol </span>Minishop</p>
        </div>



        <div class="tab-content" data-aos="fade-up" data-aos-delay="300">

            <div class="tab-pane fade active show" id="minishop-starters">

                <div class="tab-header text-center">
                    <p>minishop</p>

                </div>

                <div class="row gy-5">
                    @for (int i = 0; i < Model.two.food_cans_names.Count; i++)
                    {

                        <div class="col-lg-4 minishop-item">
                            @{
                                await Model.OnGetImagesAsync();
                            }
                            <form method="get" asp-page-handler="ImagesAsync">

                                @if (Model.two.Images_Minishop[i] != null)
                                {
                                    string base64Image = Convert.ToBase64String(Model.two.Images_Minishop[i]);
                                    <a asp-page="/MealInfo" asp-route-id="@Model.two.ids_Minishop[i]" asp-route-identifier="@Model.identifier">
                                        <img class="menu-img img-fluid circular-image" src="data:image/jpeg;base64,@base64Image" alt="Meal Image" width="500" />
                                    </a>
                                    <h4>@Model.two.food_cans_names[i]</h4>
                                  
                                    <p class="price">
                                        @Model.two.prices[i] EGP
                                    </p>
                                }
                                else
                                {
                                    <p>No image available.</p>
                                }
                            </form>

                            
                        </div>

                        <!-- Menu Item -->
                    }
                    

                 

                </div>
                </div>
            </div><!-- End Starter Menu Content -->



</div>
