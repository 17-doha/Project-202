        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            border-radius: 10px; /* Add border-radius to make the corners curved */
            overflow: hidden; /* Ensure the curved corners are visible */
        }

            .table th {
                background-color: #f2f2f2;
                border: 1px solid #dddddd;
                text-align: left;
                padding: 8px;
            }

            .table tr {
                border: 1px solid #dddddd;
            }

                .table tr:nth-child(even) {
                    background-color: #f9f9f9;
                }

            .table td {
                border: 1px solid #dddddd;
                text-align: left;
                padding: 8px;
            }
            .mealinfo {
                font-weight: 700;
                margin-bottom: 5px;
                font-size: 20px;
                color: var(--color-secondary);
            }
    </style>
