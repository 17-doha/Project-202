<body>
    <br />
    <br />
    <br />
    <br />
    <br />

    <div class="container">
        <div class="main-body">

            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="main-breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item"><a href="javascript:void(0)">User</a></li>
                    <li class="breadcrumb-item active" aria-current="page">User Profile</li>
                </ol>
            </nav>
            <!-- /Breadcrumb -->

            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="~/img/chefs/female-avatar.png" alt="Admin" class="rounded-circle" width="150">
                                <div class="mt-3">
                                    <h4>@Model.Cooker.UserName</h4>
                                    <p class="text-secondary mb-1">Cooker</p>
                                    <p class="text-muted font-size-sm">Giza, Dokki</p>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                
                <div class="col-md-8">
                    <!-- Profile Details Card -->
                    <div class="card mb-3">
                        <div class="card-body">
                            <!-- Profile Details Content -->
                            <div class="row">
                                <!-- Individual Detail -->
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Full Name</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.Cooker.UserName
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <!-- Individual Detail -->
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Email</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.Cooker.Email
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <!-- Individual Detail -->
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Phone Number</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.Cooker.Phone_Number
                                </div>
                            </div>

                            <hr>
                            <div class="row">
                                <!-- Individual Detail -->
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Rating</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <div class="wrapper">
                                        <form method="post" asp-route-id = "@Model.Cooker.Id">
											<input name="ratingRadio" type="radio" id="st1" value="5" />
											<label for="st1"></label>
											<input name="ratingRadio" type="radio" id="st2" value="4" />
											<label for="st2"></label>
											<input name="ratingRadio" type="radio" id="st3" value="3" />
											<label for="st3"></label>
											<input name="ratingRadio" type="radio" id="st4" value="2" />
											<label for="st4"></label>
											<input name="ratingRadio" type="radio" id="st5" value="1" />
											<label for="st5"></label>
											<div>
												<button type="submit" class="btn">Submit</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <hr>
                        </div>
                    </div>                  

                </div>
                <div>
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <div class="mt-3">
                                    @{
                                        foreach (var meal in Model.Meals)
                                        {
                                            <h4>@meal</h4>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
            
        </div>
    </div>

</body>
