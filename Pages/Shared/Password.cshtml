<!DOCTYPE html>
<html lang="en">
<head>
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Edit Password</title>
    <style>
        body {
            background-color: #f8f9fa;
        }

        .center-container {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .form-container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
        }
    </style>
</head>
<body>

   
    <div class="center-container">
        <div class="form-container">
            <p class="text-center">Edit Password</p>

            <form method="POST">
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">*</span>
                        </div>
                        <input type="password" asp-for="@Model.pass" class="form-control" placeholder="Password" aria-label="Password" aria-describedby="addon-wrapping">
                    </div>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">*</span>
                        </div>
                        <input type="password" asp-for="@Model.passconfigeration" class="form-control" placeholder="Confirm Password" aria-label="Confirm Password" aria-describedby="addon-wrapping">
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-6">
                            <button type="submit" class="btn btn-danger btn-block">Update</button>
                        </div>
                        <div class="col-sm-6">
                            @if (Model.type == "\'Driver\''")
                            {
                                <a class="btn btn-outline-danger btn-block" asp-page="/DeliveryProfile" asp-route-ID2="@Model.ID3">Cancel</a>

                            }
                            else if (Model.type == "\'Cooker\'")
                            {
                                <a class="btn btn-outline-danger btn-block" asp-page="/CookerProfile" asp-route-ID2="@Model.ID3">Cancel</a>

                            }
                            else
                            {
                                <a class="btn btn-outline-danger btn-block" asp-page="/Profile" asp-route-ID2="@Model.ID3">Cancel</a>

                            }
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

</body>
</html>

